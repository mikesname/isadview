# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.Application.index
GET     /home                           controllers.Application.index
GET     /test                           controllers.Gremlin.async

# Description CRUD
GET     /description                    controllers.Description.create
GET     /description/:slug              controllers.Description.detail(slug: String)
POST    /description                    controllers.Description.createPost
GET     /description/edit/:slug         controllers.Description.update(slug: String)
POST    /description/edit/:slug         controllers.Description.updatePost(slug: String)

# Searching
GET     /$rtype<(collection|repository|authority)>     controllers.Search.list(rtype:String, page:Int ?= 0, s:Int ?= 2, q ?= "", field ?= "")
GET     /$rtype<(collection|repository|authority)>/facets/:facet          controllers.Search.facets(facet:String, rtype:String, page:Int ?= 0, sort:String ?= "count", q ?= "", field ?= "")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
