# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /dbtest                         controllers.Application.dbtest()
GET     /testq                          controllers.Application.testq()
POST    /xmlToGeoff/:slug               controllers.Collections.xmlToGeoff(slug: String, in: String, out: String)
POST    /importGeoff/:slug              controllers.Collections.importGeoff(slug: String)

# Home page
GET     /                               controllers.Search.home
GET     /home                           controllers.Search.home
GET     /login                          controllers.Application.login
POST    /login                          controllers.Application.loginPost
GET     /logout                         controllers.Application.logout
GET     /openid                         controllers.Application.openIDCallback
GET     /signup                         controllers.Application.signup
POST    /signup                         controllers.Application.signupPost
GET     /signup_complete                controllers.Application.signupComplete
POST    /signup_complete                controllers.Application.signupCompletePost

GET     /profile                        controllers.Users.profile
GET     /profile/edit                   controllers.Users.update
POST    /profile/edit                   controllers.Users.updatePost
GET     /profile/collection/list        controllers.Users.listVirtualCollections

# Virtual Collections
GET     /profile/collection/create      controllers.VirtualCollections.create
POST    /profile/collection/create      controllers.VirtualCollections.createPost
GET     /profile/collection/:id         controllers.VirtualCollections.detail(id:Long)
GET     /profile/collection/edit/:id    controllers.VirtualCollections.update(id: Long)
POST    /profile/collection/update/:id  controllers.VirtualCollections.updatePost(id: Long)
GET     /profile/collection/delete/:id  controllers.VirtualCollections.delete(id: Long)
POST    /profile/collection/delete/:id  controllers.VirtualCollections.deletePost(id: Long)
GET     /profile/stash/remove/:vc/:rel  controllers.VirtualCollections.removeItem(vc: Long, rel: Long)
POST    /profile/stash/remove/:vc/:rel  controllers.VirtualCollections.removeItemPost(vc: Long, rel: Long)
POST    /profile/stash/:item/new        controllers.VirtualCollections.saveItemToNew(item: Long)
GET     /profile/stash/:item/:vc        controllers.VirtualCollections.saveItem(item: Long, vc: Long)
POST    /profile/stash/:item/:vc        controllers.VirtualCollections.saveItemPost(item: Long, vc: Long)


# Searching
GET     /$rtype<(collection|repository|authority|search)>     controllers.Search.list(rtype:String, page:Int ?= 1, s:Int ?= 2, q ?= "", field ?= "all")
GET     /$rtype<(collection|repository|authority|search)>/facets/:facet    controllers.Search.facets(facet:String, rtype:String, page:Int ?= 1, sort:String ?= "count", q ?= "", field ?= "all")
GET     /search/updateIndex         controllers.Search.updateIndex
POST     /search/updateIndex        controllers.Search.updateIndexPost

GET     /repository/edit/:slug      controllers.Repositories.update(slug: String)
POST    /repository/edit/:slug      controllers.Repositories.updatePost(slug: String)
GET     /repository/create          controllers.Repositories.create
POST    /repository/create          controllers.Repositories.createPost
GET     /repository/delete/:slug    controllers.Repositories.delete(slug: String)
POST    /repository/delete/:slug    controllers.Repositories.deletePost(slug: String)
GET     /repository/:slug           controllers.Repositories.detail(slug:String)

GET     /authority/edit/:slug       controllers.Authorities.update(slug: String)
POST    /authority/edit/:slug       controllers.Authorities.updatePost(slug: String)
GET     /authority/delete/:slug     controllers.Authorities.delete(slug: String)
POST    /authority/delete/:slug     controllers.Authorities.deletePost(slug: String)
GET     /authority/create           controllers.Authorities.create
POST    /authority/create           controllers.Authorities.createPost
GET     /authority/:slug            controllers.Authorities.detail(slug:String)

GET     /collection/edit/:slug      controllers.Collections.update(slug: String)
POST    /collection/edit/:slug      controllers.Collections.updatePost(slug: String)
GET     /collection/delete/:slug    controllers.Collections.delete(slug: String)
POST    /collection/delete/:slug    controllers.Collections.deletePost(slug: String)
GET     /collection/:slug/create    controllers.Collections.create(slug: String)
POST    /collection/:slug/create    controllers.Collections.createPost(slug: String)
GET     /collection/:slug           controllers.Collections.detail(slug:String)

# Generic helpers
GET     /gremlin/:method            controllers.Application.gremlinProxy(method: String)

# Javascript routing
GET    /assets/javascripts/routes      controllers.Application.javascriptRoutes()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
