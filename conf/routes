# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /home               controllers.Application.index
GET     /$rtype<(collection|repository|authority)>          controllers.Application.list(rtype:String, page:Int ?= 0, s:Int ?= 2, q ?= "", field ?= "")
GET     /$rtype<(collection|repository|authority)>/facets/:facet          controllers.Application.facets(facet:String, rtype:String, page:Int ?= 0, s:String ?= "count", q ?= "", field ?= "")
GET     /$rtype<(collection|repository|authority)>/:slug    controllers.Application.detail(rtype:String, slug:String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
